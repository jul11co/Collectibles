{{> book_navbar}}
<div class="main-content">
<div class="background-container">
	<div class="background" style="background-image: url('/img/books.jpg')"></div>
</div>
<div class="container">
<div class="row" style="margin-bottom: 40px;">
	<div class="col-md-12">
		<h3 class="breadcrumb">
			<div class="dropdown dropdown-inline">
			  <a class="dropdown-toggle" type="button" data-toggle="dropdown">Books
			  <span class="caret"></span></a>
			  <ul class="dropdown-menu">
			    <li><a href="/magazines" onclick="loadInplace(this);return false;">Magazines</a></li>
			    <li><a href="/comics" onclick="loadInplace(this);return false;">Comics</a></li>
			    <li><a href="/books" onclick="loadInplace(this);return false;">Books</a></li>
			  </ul>
			</div>
		</h3>
	</div>
	<div class="col-md-12">
		<h4>
			<span class="text-active">RECENTLY ADDED</span>
		{{#if books.length}}
			{{#if skip}}
			<span class="label label-default">{{math skip '+' 1}} - {{math skip '+' books.length}} of {{count}}</span>
			{{else}}
			<span class="label label-default">1 - {{books.length}} of {{count}}</span>
			{{/if}}
		{{else}}
			<span class="label label-default">0</span>
		{{/if}}
		</h4>
		<div class="row row-eq">
		{{#each books}}
			<div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
			<div class="issue">
				<div class="actions">
					<a href="/books/{{this._id}}" onclick="loadInplace(this);return false;" class="btn btn-default btn-block"><i class="fa fa-info fa-w"></i> Info</a>
					<a href="/read/book/{{this._id}}" class="btn btn-default btn-block"><i class="fa fa-eye fa-w"></i> Read</a> 
				</div>
			{{#if this.cover_image}}
				<img class="cover-image" src="{{this.cover_image}}">
			{{/if}}
				<h5 class="title">{{this.name}}</h5>
				<p class="subtitle">
				{{#if this.release_year}}
					{{this.release_year}} - 
				{{/if}}
					{{this.pages}} pages
				</p>
			</div>
			</div>
		{{/each}}
		</div>
	{{#if books.length}}
	{{#equal books.length limit}}
		<div class="row" style="margin-top: 20px;text-align: center;">
			<div class="col-md-12">
		{{#if skip}}
			<a href="/books?skip={{math skip '+' books.length}}" onclick="loadInplace(this);return false;" class="btn btn-primary">More Books</a>
		{{else}}
			<a href="/books?skip={{books.length}}" onclick="loadInplace(this);return false;" class="btn btn-primary">More Books</a>
		{{/if}}
			</div>
		</div>
	{{/equal}}
	{{/if}}
	</div>
</div>
</div>
</div>
<script type="text/javascript">
	$(document).ready(function() {
		$('.row-eq').rowequalizer();
	});
</script>