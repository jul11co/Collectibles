{{> book_navbar}}
<div class="main-content">
{{#if book.cover_image}}
<div class="background-container">
	<div class="background" style="background-image: url('{{book.cover_image}}')"></div>
</div>
{{/if}}
<div class="container">
<div class="row" style="margin-bottom: 40px;">
	<div class="col-md-12" style="margin-bottom: 20px;">
		<h3 class="breadcrumb">
			<div class="dropdown dropdown-inline">
			  <a href="/books" onclick="loadInplace(this);return false;">Books</a>
			  <a class="dropdown-toggle" type="button" data-toggle="dropdown">|
			  <span class="caret"></span></a>
			  <ul class="dropdown-menu">
			    <li><a href="/magazines" onclick="loadInplace(this);return false;">Magazines</a></li>
			    <li><a href="/comics" onclick="loadInplace(this);return false;">Comics</a></li>
			    <li><a href="/books" onclick="loadInplace(this);return false;">Books</a></li>
			  </ul>
			</div> 
			<i class="fa fa-angle-right fa-fw"></i> 
			{{book.name}}
		</h3>
	</div>
	<div class="col-md-4 col-sm-6">
		<img src="{{book.cover_image}}" class="img-responsive cover-image-big">
	</div>
	<div class="col-md-8 col-sm-6">
		<h2 class="issue-title"><span>{{book.name}}</span></h2>
		<hr/>
	{{#if book.release_year}}
		<div class="metadata">
			<span class="metadata-label">Release Year</span>
			<span>{{book.release_year}}</span>
		</div>
	{{/if}}
		<div class="metadata">
			<span class="metadata-label">Number of Pages</span>
			<span>{{book.pages}}</span>
		</div>
		<hr/>
		<div class="metadata">
			<span class="metadata-label">File Name</span>
			<span>{{book.filename}}</span>
		</div>
		<div class="metadata">
			<span class="metadata-label">File Size</span>
			<span>{{formatBytes book.filesize}}</span>
		</div>
	{{#if book.md5sum}}
		<div class="metadata">
			<span class="metadata-label">MD5</span>
			<span>{{book.md5sum}}</span>
		</div>
	{{/if}}
	{{#if book.folder}}
		<div class="metadata">
			<span class="metadata-label">Location</span>
			<span>{{book.folder}}</span>
		</div>
	{{/if}}
		<hr/>
		<a href="/read/book/{{book._id}}" class="btn btn-primary"><i class="fa fa-eye fa-w"></i> Read Now</a> 
		<a href="/download/book/{{book._id}}" class="btn btn-warning"><i class="fa fa-download fa-w"></i> Download</a> 
	</div>
</div>
</div>
</div>