{{> comic_navbar}}
<div class="main-content">
{{#if issues.length}}
	{{#if issues.0.cover_image}}
<div class="background-container">
	<div class="background" style="background-image: url('{{issues.0.cover_image}}')"></div>
</div>
	{{/if}}
{{else}}
<div class="background-container">
	<div class="background" style="background-image: url('/img/comics.jpg')"></div>
</div>
{{/if}}
<div class="container">
<div class="row" style="margin-bottom: 40px;">
	<div class="col-md-12">
		<h3 class="breadcrumb">
			<div class="dropdown dropdown-inline">
			  <a href="/comics" onclick="loadInplace(this);return false;">Comics</a>
			  <a class="dropdown-toggle" type="button" data-toggle="dropdown">|
			  <span class="caret"></span></a>
			  <ul class="dropdown-menu">
			    <li><a href="/magazines" onclick="loadInplace(this);return false;">Magazines</a></li>
			    <li><a href="/comics" onclick="loadInplace(this);return false;">Comics</a></li>
			    <li><a href="/books" onclick="loadInplace(this);return false;">Books</a></li>
			    <li class="divider"></li>
			    <li><a href="/comicvine" onclick="loadInplace(this);return false;">ComicVine</a></li>
			  </ul>
			</div> 
			<i class="fa fa-angle-right fa-fw"></i> 
			{{serie.name}} 
			<div class="dropdown dropdown-inline">
			  <a class="dropdown-toggle" type="button" data-toggle="dropdown"><i class="fa fa-bars fa-fw"></i></a>
			  <ul class="dropdown-menu dropdown-menu-right">
			    <li><a href="/comicvine/search?q={{encodeURI serie.name}}&type=volume" onclick="loadInplace(this);return false;">Search ComicVine</a></li>
			  </ul>
			</div> 
		</h3>
	</div>
	<div class="col-md-12">
		<h3 class="issue-title">{{serie.name}}</h3>
		<h4>
			<span class="text-active">ISSUES</span>
		{{#if issues.length}}
			{{#if skip}}
			<span class="label label-default">{{math skip '+' 1}} - {{math skip '+' issues.length}} of {{count}}</span>
			{{else}}
			<span class="label label-default">1 - {{issues.length}} of {{count}}</span>
			{{/if}}
		{{else}}
			<span class="label label-default">0</span>
		{{/if}}
		</h4>
		<div class="row row-eq">
		{{#each issues}}
			<div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
			<div class="issue">
				<div class="actions hidden">
					<a href="/comic_issues/{{this._id}}" onclick="loadInplace(this);return false;" class="btn btn-default btn-block"><i class="fa fa-info fa-w"></i> Info</a>
					<a href="/read/comic/{{this._id}}" class="btn btn-default btn-block"><i class="fa fa-eye fa-w"></i> Read</a> 
				</div>
			{{#if this.cover_image}}
				<a href="/comic_issues/{{this._id}}" onclick="loadInplace(this);return false;">
				<img class="cover-image" src="{{this.cover_image}}">
				</a>
			{{/if}}
				<h5 class="title"><a href="/comic_issues/{{this._id}}" onclick="loadInplace(this);return false;">{{this.name}}</a></h5>
				<p class="subtitle">{{this.release_year}} - {{this.pages}} pages</p>
			</div>
			</div>
		{{/each}}
		</div>
	{{#if issues.length}}
	{{#equal issues.length limit}}
		<div class="row" style="margin-top: 20px;text-align: center;">
			<div class="col-md-12">
		{{#if skip}}
			<a href="/comics/{{serie._id}}?skip={{math skip '+' issues.length}}" onclick="loadInplace(this);return false;" class="btn btn-primary">More</a>
		{{else}}
			<a href="/comics/{{serie._id}}?skip={{issues.length}}" onclick="loadInplace(this);return false;" class="btn btn-primary">More</a>
		{{/if}}
			</div>
		</div>
	{{/equal}}
	{{/if}}
	</div>
</div>
</div>
</div>
<script type="text/javascript">
	$(document).ready(function() {
		$('.row-eq').rowequalizer();
	});
</script>